<div class = "container">
<div class = "agent-title"><h1><%=@agent.name%></h1>
<p><%= @agent.category %></p>
<p><em><strong><%= @agent.marital_status %><strong></em></p></div>

<% if @agent.photo.attached? %>
  <div class = "image-show-page"><%= cl_image_tag @agent.photo.key %></div>
<% else %>
  <div class = "image-show-page"><%= image_tag "/assets/agent_avatar.jpeg" %></div>
<% end %>
<%# when we can create an agent, test Owner: <%= @agent.user.name %>
