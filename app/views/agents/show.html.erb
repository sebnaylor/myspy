      <div class = "agent-show-page-container-box-2c edit-button btn-main">
        <h2>Edit</h2>
      </div>
    <% end %>
    <%= link_to agent_path(@agent), method: :delete, data: { confirm: "Our agent killers will be dispatched, are you sure?" } do%>
